<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.HomeActivity"
    android:background="@drawable/firstbackground"
    >
    <Button
        android:id="@+id/setting_entrance"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/settingbtn"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/show_area_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---地区---"
        android:textColor="#fff"
        android:textSize="28dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        />

    <include layout="@layout/activity_base"/>
    <include layout="@layout/activity_sign"/>
    <include layout="@layout/setting_item"/>
</RelativeLayout>